<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Base Text Appearance Style  -->
    <style name="TextAppearance.App" parent="TextAppearance.AppCompat" />

        <!--  Text Appearance  -->
    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/textsize_larger</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.App.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/textsize_large</item>
    </style>
    <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:lineHeight">@dimen/lineheight_medium</item>
        <item name="lineHeight">@dimen/lineheight_medium</item>
    </style>

        <!--  Widget Text Appearance  -->
    <style name="TextAppearance.App.Toolbar" />

    <style name="TextAppearance.App.Toolbar.Label" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>